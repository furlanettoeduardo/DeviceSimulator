<Window x:Class="DeviceSimulator.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceSimulator.Client.WPF"
        mc:Ignorable="d"
        Title="Device Simulator" Height="420" Width="640"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock x:Name="ServerStatusText" Text="Servidor: Offline" Foreground="Red" FontWeight="Bold" Margin="0,0,16,0"/>
            <TextBlock x:Name="ServerVersionText" Text="VersÃ£o: -"/>
        </StackPanel>

        <ToggleButton x:Name="ConnectedToggle" Grid.Row="1" Content="Desconectado" Width="320" Height="32" IsChecked="False" IsEnabled="True" Margin="0,0,0,12"
                      Checked="ConnectedToggle_Checked" Unchecked="ConnectedToggle_Unchecked" />

        <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Acelerador" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Slider x:Name="ThrottleSlider" Minimum="0" Maximum="100" Width="400" ValueChanged="ThrottleSlider_ValueChanged"/>
                <TextBlock x:Name="ThrottleValueText" Text="0%" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="Freio" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Slider x:Name="BrakeSlider" Minimum="0" Maximum="100" Width="400" ValueChanged="BrakeSlider_ValueChanged"/>
                <TextBlock x:Name="BrakeValueText" Text="0%" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,8">
            <TextBlock Text="Embreagem" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Slider x:Name="ClutchSlider" Minimum="0" Maximum="100" Width="400" ValueChanged="ClutchSlider_ValueChanged"/>
                <TextBlock x:Name="ClutchValueText" Text="0%" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
